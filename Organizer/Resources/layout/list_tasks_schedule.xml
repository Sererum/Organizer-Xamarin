<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:minHeight="@dimen/height_tool_bar"
    >

    <TextView
        android:id="@+id/ScheduleItemLineTextView"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#000"
        />

    <TextView
        android:id="@+id/ScheduleItemHourTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/ScheduleItemLineTextView"
        android:textSize="14sp"
        />

    <LinearLayout
        android:id="@+id/ScheduleItemListLayout"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_toRightOf="@id/ScheduleItemHourTextView"
        android:layout_below="@id/ScheduleItemLineTextView"
        />

</RelativeLayout>