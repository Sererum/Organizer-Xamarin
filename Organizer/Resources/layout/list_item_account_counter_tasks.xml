<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/CounterBackgroundLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/round_rect"
    android:padding="1dp"
    >

    <RelativeLayout
        android:id="@+id/CounterMainLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/round_rect"
        android:padding="10dp"
        >
    
        <RelativeLayout
            android:id="@+id/CounterTextLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            >
        
            <TextView
                android:id="@+id/CounterTaskTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_size"
                android:textColor="#000"
                />

            <TextView
                android:id="@+id/CounterTaskCounterTextView"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_toRightOf="@id/CounterTaskTextView"
                android:layout_alignBottom="@id/CounterTaskTextView"
                android:layout_marginLeft="10dp"
                android:gravity="bottom"
                android:textSize="@dimen/text_size"
                android:textColor="#000"
                />
        
        </RelativeLayout>
        

        <SeekBar
            android:id="@+id/CounterTaskSeekBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/CounterTextLayout"
            android:layout_marginTop="10dp"
            android:progressDrawable="@drawable/progress_style"
            android:thumb="@android:drawable/screen_background_light_transparent"
            />

    </RelativeLayout>

</RelativeLayout>
