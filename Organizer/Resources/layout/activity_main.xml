<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/MainLayout"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/MainFragmentLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/MainButtonsLayout"
        android:minHeight="800dp"
        />

    <RelativeLayout
        android:id="@+id/MainButtonsLayout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_tool_bar"
        android:layout_alignParentBottom="true"
        android:background="@drawable/round_rect"
        android:layout_margin="5dp"
        android:padding="2dp"
        >

        <ImageButton
            android:id="@+id/MainCalendarButton"
            android:layout_width="@dimen/height_tool_bar"
            android:layout_height="@dimen/height_tool_bar"
            android:layout_toLeftOf="@id/MainScheduleButton"
            android:layout_marginRight="15dp"
            android:background="@drawable/ic_calendar"
            android:contentDescription="@string/description_calendar_button" 
            />

        <ImageButton
            android:id="@+id/MainScheduleButton"
            android:layout_width="@dimen/height_tool_bar"
            android:layout_height="@dimen/height_tool_bar"
            android:layout_toLeftOf="@id/MainListButton"
            android:layout_marginRight="15dp"
            android:background="@drawable/ic_schedule"
            android:contentDescription="@string/description_schedule_button" 
            />

        <ImageButton
            android:id="@+id/MainListButton"
            android:layout_width="@dimen/height_tool_bar"
            android:layout_height="@dimen/height_tool_bar"
            android:layout_centerHorizontal="true"
            android:background="@drawable/ic_list"
            android:contentDescription="@string/description_list_button" 
            />

        <ImageButton
            android:id="@+id/MainInboxButton"
            android:layout_width="@dimen/height_tool_bar"
            android:layout_height="@dimen/height_tool_bar"
            android:layout_toRightOf="@id/MainListButton"
            android:layout_marginLeft="15dp"
            android:background="@drawable/ic_inbox"
            android:contentDescription="@string/description_account_button" 
            />

        <ImageButton
            android:id="@+id/MainAccountButton"
            android:layout_width="@dimen/height_tool_bar"
            android:layout_height="@dimen/height_tool_bar"
            android:layout_toRightOf="@id/MainInboxButton"
            android:layout_marginLeft="15dp"
            android:background="@drawable/ic_account"
            android:contentDescription="@string/description_account_button" 
            />
    
    
    </RelativeLayout>

</RelativeLayout>