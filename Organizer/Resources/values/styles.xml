<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

	<!--MainDarkTheme-->

	<style name="MainDarkTheme" parent="Theme.AppCompat">
		<item name="colorAccent">@color/main_dark_down_buttons</item>
		<item name="colorPrimary">@android:color/darker_gray</item>
		<item name="android:textColorPrimary">@color/main_dark_text</item>
	</style>

	<style name="MainDarkText" parent="android:TextAppearance.DeviceDefault.Small">
		<item name="android:textColor">@color/main_dark_text</item>
	</style>

	<!--DeepWaterTheme-->

	<style name="DeepWaterTheme" parent="Theme.AppCompat">
		<item name="colorAccent">@color/deep_water_down_buttons</item>
		<item name="colorPrimary">@android:color/darker_gray</item>
		<item name="android:textColorPrimary">@color/deep_water_text</item>
	</style>

	<style name="DeepWaterText" parent="android:TextAppearance.DeviceDefault.Small">
		<item name="android:textColor">@color/deep_water_text</item>
	</style>

	<!--DarkPurpleTheme-->

	<style name="DarkPurpleTheme" parent="Theme.AppCompat">
		<item name="colorAccent">@color/dark_purple_down_buttons</item>
		<item name="colorPrimary">@android:color/darker_gray</item>
		<item name="android:textColorPrimary">@color/dark_purple_text</item>
	</style>

	<style name="DarkPurpleText" parent="android:TextAppearance.DeviceDefault.Small">
		<item name="android:textColor">@color/dark_purple_text</item>
	</style>

</resources>
